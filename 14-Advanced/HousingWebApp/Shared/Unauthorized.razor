@page "/unauthorized"

<PageTitle>Unauthorized Access</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1>Unauthorized</h1>
            <h2>You are not authorized to access this resource.</h2>
            <p>The requested resource requires specific permissions that you may not currently possess.</p>
